<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE syntax SYSTEM "syntax.dtd">

<syntax>
    <head>
        <name>XML</name>
        <!-- The definitions title -->
        <charsintokens><![CDATA[_0987654321abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@]]></charsintokens>
        <!-- Valid Characters for Variables -->
        <folding toplevel="4"/>
        <stylesheet>TagBased</stylesheet>
    </head>
    <states>
        <default id="Base" scope="meta.default">
            <keywords id="Bad Ampersand" useforautocomplete="no" scope="invalid.illegal.bad-ampersand">
                <regex>(&amp;)</regex>
            </keywords>
           <keywords id="Tags" useforautocomplete="no" scope="meta.tag">
                <regex>(&lt;[/\s]*[^/?!][-:_\w]*\s*(?:[-:_\w]+[ \t]*=[ \t]*(?:".*?"|'.*?'|[\w:]+)\s*)*[/\s]*>)</regex>
            </keywords>
            <keywords id="Attributes in Tags" useforautocomplete="no" scope="entity.other.attribute-name">
                <regex>([\w-]*)(?=[ \t]*=[^&lt;]+>)</regex>
            </keywords>
            <keywords id="Strings in Tags" type="string" useforautocomplete="no" scope="string.quoted.attribute-value">
                <regex>=[ \t]*("[^"]*"|'[^']*')(?=[^&lt;]*>)</regex>
            </keywords>
            <keywords id="Entities" useforautocomplete="no" scope="constant.character.entity">
                <regex>(&amp;\w{1,8};)</regex>
                <regex>(&amp;#\d+;)</regex>
                <regex>(&amp;#x\h+;)</regex>
            </keywords>
            <state id="Comment" type="comment" scope="comment.block">
                <begin><regex>&lt;!--</regex></begin>
                <end><regex>--></regex></end>
                <keywords id="SGML Double Dash" useforautocomplete="no" scope="invalid.illegal.sgml">
                    <regex>(?&lt;!\!)(--)(?!>)</regex>
                </keywords>
				<import mode="Base" state="EmailAndURLContainerState" keywords-only="yes"/>
            </state>
            <state id="CDATA" foldable="yes" scope="string.unquoted.cdata">
                <begin>
                    <regex>&lt;!\s*\[CDATA\s*\[</regex>
                </begin>
                <end>
                    <regex>\]\s*\]\s*></regex>
                </end>
            </state>
            <state id="Doctype" foldable="no" scope="meta.tag.sgml.doctype">
                <begin>
                    <regex>&lt;!</regex>
                </begin>
                <end>
                    <regex>></regex>
                </end>
            </state>
            <state id="Escape" foldable="no" scope="meta.tag.preprocessor">
                <begin>
                    <regex>&lt;\?</regex>
                </begin>
                <end>
                    <regex>\?></regex>
                </end>
            </state>
            <state id="Single Tag" foldable="no" scope="meta.tag.state.no-content">
                <begin>
                    <regex>&lt;\s*[^/?!][-:_\w]*\s*(?:[-:_\w]+\s*=\s*(?:"[^"]*"|'[^']*'|\w+)\s*)*/\s*(?=>)</regex>
                </begin>
                <end>
                    <regex>></regex>
                </end>
                <import/>
            </state>
            <state id="Tag State" foldable="yes" scope="meta.tag.state">
                <begin>
                    <regex>&lt;\s*(?'xmltagstatename'[^/?!][-:_\w]*)\s*(?:[-:_\w]+[ \t]*=[ \t]*(?:"[^"]*"|'[^']*'|\w+)\s*)*\s*></regex>
                </begin>
                <end>
                    <regex>&lt;\s*/\s*(?#see-insert-start-group:xmltagstatename)\s*></regex>
                </end>
                <import/>
            </state>
        </default>
    </states>
</syntax>